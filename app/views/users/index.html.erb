<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render 'users/user', user: @user %>
     <%= render 'books/newbook', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
     <h2>Users</h2>
     <% @users.each do |user| %>
     <table class="table">
      <thead>
       <tr>
        <th>Image</th>
        <th>Name</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show","/users/#{user.id}" %></td>
       </tr>
      </tbody>
     </table>
     <% end %>
    </div>
 </div>
</div>